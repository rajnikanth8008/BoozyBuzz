<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="layout_border">
        <item name="android:background">@drawable/layout_border</item>
    </style>

    <style name="borderrightradius">
        <item name="android:background">@drawable/borderrightradius</item>
    </style>

    <style name="borderleftradius">
        <item name="android:background">@drawable/borderleftradius</item>
    </style>
</resources>